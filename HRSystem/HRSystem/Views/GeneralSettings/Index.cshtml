@model IEnumerable<HRSystem.Models.GeneralSettings>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h1>General Settings</h1>


<p>
    <a asp-controller="GeneralSettings" asp-action="New">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style="text-align:center;">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deduction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weekend1st)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weekend2nd)
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="text-align:center;">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deduction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weekend1st)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weekend2nd)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  },
                      new {onClick="return confirm('Are you sure you want to delete this item ?')"})
            </td>
        </tr>
}
    </tbody>
</table>
